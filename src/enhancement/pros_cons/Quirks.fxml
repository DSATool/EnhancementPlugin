<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<ScrollPane fx:id="pane" vbarPolicy="ALWAYS" fitToWidth="true" style="-fx-padding: 2, 2, 2, 2;" xmlns:fx="http://javafx.com/fxml" >
   <TableView fx:id="table" editable="true" fixedCellSize="28" >
      <styleClass>
         <String fx:value="remove-vertical-scrollbar" />
         <String fx:value="remove-horizontal-scrollbar" />
      </styleClass>
      <placeholder>
         <Label minHeight="0" />
      </placeholder>
      <columns>
         <TableColumn fx:id="nameColumn" text="Schlechte Eigenschaft" minWidth="150" resizable="false" sortable="false" editable="false" styleClass="left-aligned" style="-fx-alignment: CENTER-LEFT;" />
         <TableColumn fx:id="sesColumn" text="SEs" minWidth="65" maxWidth="65" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
         <TableColumn fx:id="startColumn" text="Von" minWidth="60" maxWidth="60" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
         <TableColumn fx:id="targetColumn" text="Auf" minWidth="60" maxWidth="60" resizable="false" sortable="false" editable="true" style="-fx-alignment: CENTER;" />
         <TableColumn fx:id="apColumn" text="AP" minWidth="75" maxWidth="75" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
         <TableColumn fx:id="validColumn" minWidth="0" maxWidth="0" />
         <TableColumn fx:id="cheaperColumn" minWidth="0" maxWidth="0" />
      </columns>
   </TableView>
</ScrollPane>