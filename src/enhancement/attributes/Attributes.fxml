<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>

<ScrollPane fx:id="pane" vbarPolicy="ALWAYS" fitToWidth="true" xmlns:fx="http://javafx.com/fxml" >
   <HBox spacing="2" style="-fx-padding: 2, 2, 2, 2;" >
      <TableView fx:id="attributesTable" editable="true" fixedCellSize="28" >
         <styleClass>
            <String fx:value="remove-vertical-scrollbar" />
            <String fx:value="remove-horizontal-scrollbar" />
         </styleClass>
         <columns>
            <TableColumn fx:id="attributesNameColumn" text="Eigenschaft" minWidth="100" resizable="false" sortable="false" styleClass="left-aligned" style="-fx-alignment: CENTER-LEFT;" />
            <TableColumn fx:id="attributesSesColumn" text="SEs" minWidth="65" maxWidth="65" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="attributesStartColumn" text="Von" minWidth="60" maxWidth="60" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="attributesTargetColumn" text="Auf" minWidth="60" maxWidth="60" resizable="false" sortable="false" editable="true" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="attributesAPColumn" text="AP" minWidth="75" maxWidth="75" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="attributesValidColumn" minWidth="0" maxWidth="0" />
            <TableColumn fx:id="attributesCheaperColumn" minWidth="0" maxWidth="0" />
         </columns>
      </TableView>
      <TableView fx:id="energiesTable" editable="true" fixedCellSize="28" >
         <styleClass>
            <String fx:value="remove-vertical-scrollbar" />
            <String fx:value="remove-horizontal-scrollbar" />
         </styleClass>
         <columns>
            <TableColumn fx:id="energiesNameColumn" text="Basiswert" minWidth="100" resizable="false" sortable="false" styleClass="left-aligned" style="-fx-alignment: CENTER-LEFT;" />
            <TableColumn fx:id="energiesSesColumn" text="SEs" minWidth="65" maxWidth="65" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="energiesStartColumn" text="Von" minWidth="60" maxWidth="60" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="energiesTargetColumn" text="Auf" minWidth="60" maxWidth="60" resizable="false" sortable="false" editable="true" style="-fx-alignment: CENTER;" />
            <TableColumn fx:id="energiesAPColumn" text="AP" minWidth="75" maxWidth="75" resizable="false" sortable="false" style="-fx-alignment: CENTER;" /> 
            <TableColumn fx:id="energiesValidColumn" minWidth="0" maxWidth="0" />
            <TableColumn fx:id="energiesCheaperColumn" minWidth="0" maxWidth="0" />           
         </columns>
      </TableView>
   </HBox>
</ScrollPane>