         </columns>
      </TableView>
   </ScrollPane>
   <HBox spacing="2">
      <Label text="Kosten: " />
      <Label fx:id="costLabel" prefWidth="35" alignment="CENTER_RIGHT" />
      <Label text="AP" prefWidth="50" />
      <CheckBox fx:id="chargenRules" text="Generierungsregeln" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
