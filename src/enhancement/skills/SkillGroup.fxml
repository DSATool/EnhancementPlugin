<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TitledPane?>

<TitledPane fx:id="pane" xmlns:fx="http://javafx.com/fxml" >
   <TableView fx:id="table" editable="true" fixedCellSize="28" >
      <styleClass>
         <String fx:value="remove-vertical-scrollbar" />
         <String fx:value="remove-horizontal-scrollbar" />
      </styleClass>
      <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
      <placeholder>
         <Label minHeight="0" />
      </placeholder>
      <columns>
         <TableColumn fx:id="nameColumn" text="Sonderfertigkeit" minWidth="200" prefWidth="200" editable="false" styleClass="left-aligned" style="-fx-alignment: CENTER-LEFT;" />
         <TableColumn fx:id="descColumn" text="Beschreibung" minWidth="150" prefWidth="150" sortable="false" styleClass="left-aligned" style="-fx-alignment: CENTER-LEFT;" />
         <TableColumn fx:id="variantColumn" text="Variante" minWidth="60" prefWidth="150" sortable="false" styleClass="left-aligned" style="-fx-alignment: CENTER-LEFT;" />
         <TableColumn fx:id="costColumn" text="Kosten" prefWidth="75" resizable="false" sortable="false" style="-fx-alignment: CENTER;" />
         <TableColumn fx:id="apColumn" text="AP" prefWidth="75" resizable="false" style="-fx-alignment: CENTER;" />
         <TableColumn fx:id="validColumn" minWidth="0" maxWidth="0" prefWidth="0" />
         <TableColumn fx:id="cheaperColumn" minWidth="0" maxWidth="0" prefWidth="0" />
      </columns>	
   </TableView>
</TitledPane>	